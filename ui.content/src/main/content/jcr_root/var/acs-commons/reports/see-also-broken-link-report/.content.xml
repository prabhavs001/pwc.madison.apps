<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="cq:Page">
    <jcr:content
        cq:designPath="/etc/designs/acs-commons"
        jcr:description="Report for finding See Also broken links"
        jcr:primaryType="nt:unstructured"
        jcr:title="See Also Broken Link Report"
        sling:resourceType="acs-commons/components/utilities/report-builder/report-page">
        <config
            jcr:primaryType="nt:unstructured"
            sling:resourceType="wcm/foundation/components/parsys">
            <broken-links
                jcr:primaryType="nt:unstructured"
                sling:resourceType="pwc-madison/components/report/see-also/see-also-report-config"
                pageSize="50"
                reportExecutor="com.pwc.madison.core.reports.SeeAlsoBrokenLinksReportExecutor"/>
        </config>
        <parameters
            jcr:primaryType="nt:unstructured"
            sling:resourceType="wcm/foundation/components/parsys">
            <pathfield
                jcr:primaryType="nt:unstructured"
                sling:resourceType="pwc-madison/components/report/pathfield"
                fieldLabel="Path"
                name="path"
                required="true"
                resourceType="granite/ui/components/foundation/form/pathbrowser"
                rootPath="/content/dam/pwc-madison"/>
            <reportmessage
                jcr:primaryType="nt:unstructured"
                sling:resourceType="pwc-madison/components/report/reportmessage"
                message="&lt;p>This report execution is Resource Intensive.&lt;/p>&#xd;&#xa;&lt;p>Please select a folder which has smaller set of assets.&lt;/p>&#xd;&#xa;&lt;p>Eg: /content/dam/pwc-madison/ditaroot/us/en/pwc/accounting_guides&lt;/p>&#xd;&#xa;&lt;p>If the entire set of results are not visible as per the total number of records, please use the &amp;quot;Download Report&amp;quot; Button to get all the results.&lt;/p>&#xd;&#xa;"
                messageHeading="Warning"
                resourceType="pwc-madison/components/report/reportmessage"
                textIsRich="true"/>
        </parameters>
        <columns
            jcr:primaryType="nt:unstructured"
            sling:resourceType="wcm/foundation/components/parsys">
            <path
                jcr:primaryType="nt:unstructured"
                sling:resourceType="pwc-madison/components/report/see-also/topic-path"
                exporter="com.pwc.madison.core.reports.SeeAlsoTopicPathCSVExporter"
                heading="Path"
                link="true"/>
            <topic
                jcr:primaryType="nt:unstructured"
                sling:resourceType="acs-commons/components/utilities/report-builder/columns/text"
                exporter="com.adobe.acs.commons.reports.models.StringReportCellCSVExporter"
                heading="Title"
                property="jcr:content/metadata/dc:title"/>
            <broken-links
                jcr:primaryType="nt:unstructured"
                sling:resourceType="pwc-madison/components/report/see-also/see-also-broken-links"
                exporter="com.pwc.madison.core.reports.SeeAlsoBrokenLinksPathCSVExporter"
                heading="Broken See Also Links"/>
        </columns>
    </jcr:content>
</jcr:root>
