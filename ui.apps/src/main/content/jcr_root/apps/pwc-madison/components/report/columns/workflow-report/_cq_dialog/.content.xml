<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="PwC Workflow Report Column"
    sling:resourceType="cq/gui/components/authoring/dialog">
    <content
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/foundation/container">
        <layout
            jcr:primaryType="nt:unstructured"
            sling:resourceType="granite/ui/components/foundation/layouts/fixedcolumns"/>
        <items jcr:primaryType="nt:unstructured">
            <column
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/foundation/container">
                <items jcr:primaryType="nt:unstructured">
                    <heading
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                        fieldLabel="Heading"
                        name="./heading"
                        required="{Boolean}true"/>
                    <optionVals
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/foundation/form/select"
                        fieldLabel="Column Value"
                        name="./value"
                        required="{Boolean}true">
                        <items jcr:primaryType="nt:unstructured">
                        	<title
                                jcr:primaryType="nt:unstructured"
                                text="Title"
                                value="title"/>
                            <path
                                jcr:primaryType="nt:unstructured"
                                text="Asset Path"
                                value="path"/>
                            <docState
                                jcr:primaryType="nt:unstructured"
                                text="Document State"
                                value="docState"/>
                           <contentStatus
                                jcr:primaryType="nt:unstructured"
                                text="Content Status"
                                value="contentStatus"/>
                            <wId
                                jcr:primaryType="nt:unstructured"
                                text="Model Name"
                                value="wfModelName"/>
                             <initiator
                                jcr:primaryType="nt:unstructured"
                                text="Initiator"
                                value="initiator"/>
                            <collaborators
                                jcr:primaryType="nt:unstructured"
                                text="Collaborators"
                                value="collaborators"/>
                            <startTime
                                jcr:primaryType="nt:unstructured"
                                text="Workflow Start Time"
                                value="wfStartTime"/>
                            <endTime
                                jcr:primaryType="nt:unstructured"
                                text="Workflow End Time"
                                value="wfEndTime"/>
                          	 <lastReviewDate
                                jcr:primaryType="nt:unstructured"
                                text="Workflow Reivew Started Time"
                                value="lastReviewDate"/>
                             <lastReviewedDate
                                jcr:primaryType="nt:unstructured"
                                text="Workflow Review Ended Time"
                                value="lastReviewedDate"/>
                            <reviewers
                                jcr:primaryType="nt:unstructured"
                                text="Reviewers"
                                value="reviewers"/>
                            <lastApprovedDate
                                jcr:primaryType="nt:unstructured"
                                text="lastApprovedDate"
                                value="lastApprovedDate"/>
                          	 <approvers
                                jcr:primaryType="nt:unstructured"
                                text="Approvers"
                                value="approvers"/>
                             <publishedDate
                                jcr:primaryType="nt:unstructured"
                                text="Published Date"
                                value="publishedDate"/>
                             <publishers
                                jcr:primaryType="nt:unstructured"
                                text="Publishers"
                                value="publishers"/>
                        </items>
                  </optionVals>
                    <exporter
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/foundation/form/hidden"
                        name="./exporter"
                        value="com.pwc.madison.core.reports.columns.WorkflowReportCSVExporter"/>
                </items>
            </column>
        </items>
    </content>
</jcr:root>
