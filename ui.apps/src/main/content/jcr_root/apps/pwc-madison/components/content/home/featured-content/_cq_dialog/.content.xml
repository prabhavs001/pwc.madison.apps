<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:granite="http://www.adobe.com/jcr/granite/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="Featured Content"
    sling:resourceType="cq/gui/components/authoring/dialog"
          extraClientlibs="[cq.authoring.dialog.featured]">
    <content
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns">
        <items jcr:primaryType="nt:unstructured">
            <column
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/coral/foundation/container">
                <items jcr:primaryType="nt:unstructured">
                    <tabs
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/tabs">
                        <items jcr:primaryType="nt:unstructured">
                            <configDisplay
                                jcr:primaryType="nt:unstructured"
                                jcr:title="Configure Display"
                                sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns"
                                margin="{Boolean}true">
                                <items jcr:primaryType="nt:unstructured">
                                    <column
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/container">
                                        <items jcr:primaryType="nt:unstructured">
                                            <Heading
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                fieldLabel="Heading"
                                                name="./heading"/>
                                            <radioGroup
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/foundation/form/radiogroup"
                                                name="./type"
                                                required="true"
                                                text="Rendition Type">
                                                <items jcr:primaryType="nt:unstructured">
                                                    <radioRenditionLanding
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceType="granite/ui/components/foundation/form/radio"
                                                        name="./Rendition"
                                                        text="Landing Page Rendition"
                                                        value="landing"/>
                                                    <radioRenditionHomepage
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceType="granite/ui/components/foundation/form/radio"
                                                        label="Rendition Type"
                                                        name="./Rendition"
                                                        text="Home Page Rendition"
                                                        value="home"/>
                                                </items>
                                            </radioGroup>
                                        </items>
                                    </column>
                                </items>
                            </configDisplay>
                            <configSource
                                jcr:primaryType="nt:unstructured"
                                jcr:title="Configure Source"
                                sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns"
                                margin="{Boolean}true">
                                <items jcr:primaryType="nt:unstructured">
                                    <column
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/container">
                                        <items jcr:primaryType="nt:unstructured">
                                            <fixedList
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/multifield"
                                                composite="{Boolean}true"
                                                eaem-show-on-collapse="EAEM.showProductName"
                                                fieldLabel="ArticlesPagePath">
                                                <field
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/coral/foundation/container"
                                                    name="./fixedList">
                                                    <items jcr:primaryType="nt:unstructured">
                                                        <column
                                                            jcr:primaryType="nt:unstructured"
                                                            sling:resourceType="granite/ui/components/coral/foundation/container">
                                                            <items jcr:primaryType="nt:unstructured">
                                                                <renditionStyle
                                                                    granite:class="cq-dialog-rendition-dropdown-showhide"
                                                                    jcr:primaryType="nt:unstructured"
                                                                    sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                                                    fieldLabel="Rendition Style"
                                                                    name="./renditionStyle">
                                                                    <items jcr:primaryType="nt:unstructured">
                                                                        <standard
                                                                            jcr:primaryType="nt:unstructured"
                                                                            text="Standard"
                                                                            value="standard"/>
                                                                        <topImage
                                                                            jcr:primaryType="nt:unstructured"
                                                                            text="Top Image"
                                                                            value="topImage"/>
                                                                    </items>
                                                                    <granite:data
                                                                        jcr:primaryType="nt:unstructured"
                                                                        cq-dialog-rendition-dropdown-showhide-target=".rendition-option-listfrom-showhide-target"/>
                                                                </renditionStyle>
                                                                <imgPath
                                                                    granite:class="rendition-option-listfrom-showhide-target"
                                                                    jcr:primaryType="nt:unstructured"
                                                                    sling:resourceType="granite/ui/components/coral/foundation/form/pathbrowser"
                                                                    fieldDescription="Select an image from path browser"
                                                                    fieldLabel="Browse Image"
                                                                    name="./imagePath"
                                                                    rootPath="/content/dam/pwc-madison">
                                                                    <granite:data
                                                                        jcr:primaryType="nt:unstructured"
                                                                        showhidetargetvalue="topImage"/>
                                                                </imgPath>
                                                                <path
                                                                    jcr:primaryType="nt:unstructured"
                                                                    sling:resourceType="granite/ui/components/coral/foundation/form/pathbrowser"
                                                                    fieldDescription="Select Path"
                                                                    fieldLabel="Path"
                                                                    name="./articlePagePath"
                                                                    rootPath="/content"/>
                                                                <fallback
                                                                    jcr:primaryType="nt:unstructured"
                                                                    sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                                                                    name="./fallbackForFeatured"
                                                                    text="Fallback?"
                                                                    value="true"/>
                                                            </items>
                                                        </column>
                                                    </items>
                                                </field>
                                            </fixedList>
                                            <isTarget
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                                                name="./targetActive"
                                                text="Turn off personalisation"
                                                value="true"/>
                                        </items>
                                    </column>
                                </items>
                            </configSource>
                        </items>
                    </tabs>
                </items>
            </column>
        </items>
    </content>
</jcr:root>
