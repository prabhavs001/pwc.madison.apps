<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="Report Path Field Parameter"
    sling:resourceType="cq/gui/components/authoring/dialog"
    helpPath="https://adobe-consulting-services.github.io/acs-aem-commons/features/reports">
    <content
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/foundation/container">
        <layout
            jcr:primaryType="nt:unstructured"
            sling:resourceType="granite/ui/components/foundation/layouts/fixedcolumns"/>
        <items jcr:primaryType="nt:unstructured">
            <column
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/foundation/container">
                <items jcr:primaryType="nt:unstructured">
                    <fieldLabel
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                        fieldLabel="Label"
                        name="./fieldLabel"
                        required="{Boolean}true"/>
                    <name
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                        fieldLabel="Name"
                        name="./name"
                        required="{Boolean}true"/>
                    <required
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                        deleteHint="{Boolean}true"
                        fieldLabel="Required"
                        name="./required"
                        text="Required"
                        value="{Boolean}true"/>
                    <resourceType
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/foundation/form/hidden"
                        fieldLabel="Field Type"
                        name="./resourceType"
                        value="granite/ui/components/foundation/form/pathbrowser"/>
                    <rootPath
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/form/pathfield"
                        fieldLabel="Root Path"
                        name="./rootPath"
                        required="{Boolean}true"/>
                    <validation
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/foundation/form/hidden"
                        name="./validation"
                        value="root-path-validator"/>
                </items>
            </column>
        </items>
    </content>
</jcr:root>
