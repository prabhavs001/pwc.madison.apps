<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:granite="http://www.adobe.com/jcr/granite/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="Home Page Insights From Pwc"
    sling:resourceType="cq/gui/components/authoring/dialog">
    <content
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns">
        <items jcr:primaryType="nt:unstructured">
            <column
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/coral/foundation/container">
                <items jcr:primaryType="nt:unstructured">
                    <tabs
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/tabs">
                        <items jcr:primaryType="nt:unstructured">
                            <backgroundType
                                jcr:primaryType="nt:unstructured"
                                jcr:title="Configure Background"
                                sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns"
                                margin="{Boolean}true">
                                <items jcr:primaryType="nt:unstructured">
                                    <column
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/container">
                                        <items jcr:primaryType="nt:unstructured">
                                            <Line1
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                fieldLabel="Line 1 of the Heading"
                                                name="./line1"/>
                                            <Line2
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                fieldLabel="Line 2 of the Heading"
                                                name="./line2"/>
                                            <bgType
                                                granite:class="cq-dialog-dropdown-showhide-multi"
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                                fieldDescription="Background to be displayed"
                                                fieldLabel="Background Type"
                                                name="./bgType">
                                                <items jcr:primaryType="nt:unstructured">
                                                    <image
                                                        jcr:primaryType="nt:unstructured"
                                                        text="Color"
                                                        value="color"/>
                                                    <video
                                                        jcr:primaryType="nt:unstructured"
                                                        text="Image"
                                                        value="image"/>
                                                </items>
                                                <granite:data
                                                    jcr:primaryType="nt:unstructured"
                                                    cq-dialog-dropdown-showhide-target=".list-option-listfrom-showhide-target"/>
                                            </bgType>
                                            <colorContainer
                                                granite:class="list-option-listfrom-showhide-target"
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/container">
                                                <items jcr:primaryType="nt:unstructured">
                                                    <bgColor
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                                        fieldLabel="Background Color"
                                                        name="./bgColor">
                                                        <items jcr:primaryType="nt:unstructured">
                                                            <orange
                                                                jcr:primaryType="nt:unstructured"
                                                                text="Orange"
                                                                value="orange_bg"/>
                                                            <black
                                                                jcr:primaryType="nt:unstructured"
                                                                text="Black"
                                                                value="black_bg"/>
                                                        </items>
                                                    </bgColor>
                                                </items>
                                                <granite:data
                                                    jcr:primaryType="nt:unstructured"
                                                    showhidetargetvalue="color"/>
                                            </colorContainer>
                                            <imageContainer
                                                granite:class="list-option-listfrom-showhide-target"
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/container">
                                                <items jcr:primaryType="nt:unstructured">
                                                    <bgImagePath
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceType="granite/ui/components/coral/foundation/form/pathbrowser"
                                                        fieldDescription="Select an image from path browser"
                                                        fieldLabel="Background Image"
                                                        name="./bgImagePath"
                                                        rootPath="/content/dam/pwc-madison"/>
                                                </items>
                                                <granite:data
                                                    jcr:primaryType="nt:unstructured"
                                                    showhidetargetvalue="image"/>
                                            </imageContainer>
                                        </items>
                                    </column>
                                </items>
                            </backgroundType>
                            <configureSource
                                jcr:primaryType="nt:unstructured"
                                jcr:title="Configure Source"
                                sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns"
                                margin="{Boolean}true">
                                <items jcr:primaryType="nt:unstructured">
                                    <column
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/container">
                                        <items jcr:primaryType="nt:unstructured">
                                            <fixedList
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/multifield"
                                                composite="{Boolean}true"
                                                eaem-show-on-collapse="EAEM.showProductName"
                                                fieldLabel="ArticlesPagePath">
                                                <field
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/coral/foundation/container"
                                                    name="./fixedList">
                                                    <items jcr:primaryType="nt:unstructured">
                                                        <column
                                                            jcr:primaryType="nt:unstructured"
                                                            sling:resourceType="granite/ui/components/coral/foundation/container">
                                                            <items jcr:primaryType="nt:unstructured">
                                                                <path
                                                                    jcr:primaryType="nt:unstructured"
                                                                    sling:resourceType="granite/ui/components/coral/foundation/form/pathbrowser"
                                                                    fieldDescription="Select Path"
                                                                    fieldLabel="Path"
                                                                    name="./articlePagePath"
                                                                    rootPath="/content"/>
                                                                <imgPath
                                                                    jcr:primaryType="nt:unstructured"
                                                                    sling:resourceType="granite/ui/components/coral/foundation/form/pathbrowser"
                                                                    fieldDescription="Select an image from path browser"
                                                                    fieldLabel="Image Path"
                                                                    name="./imagePath"
                                                                    rootPath="/content/dam/pwc-madison"/>
                                                                <fallback
                                                                    jcr:primaryType="nt:unstructured"
                                                                    sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                                                                    name="./fallbackForInsights"
                                                                    text="Fallback?"
                                                                    value="true"/>
                                                            </items>
                                                        </column>
                                                    </items>
                                                </field>
                                            </fixedList>
                                        </items>
                                    </column>
                                </items>
                            </configureSource>
                        </items>
                    </tabs>
                </items>
            </column>
        </items>
    </content>
</jcr:root>
